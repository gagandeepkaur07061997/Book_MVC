@model IEnumerable<Book_MVC.Models.Publications>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Books_Copies)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Publisher_detail)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Books_detail)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
