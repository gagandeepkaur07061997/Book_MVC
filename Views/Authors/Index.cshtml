@model IEnumerable<Book_MVC.Models.Authors>

@{
    ViewData["Title"] = "Index";
}
<body>
    <div class="text-center">
        <header>
            <!--z-index code to display image on the Author page behind the text-->
            <style>
                img {
                    position: absolute;
                    left: 0px;
                    top: 0px;
                    z-index: -1;
                    display: block;
                    width: 100%;
                    height: 100%;
                    object-fit: cover;
                }
            </style>
        </header>

        <img src="~/Images/bkimage.jpg" />
    </div>
</body>
<!--code to increse the size of heading and to change its color and bold it-->
<h1 class="display-4"><b><p style="color:black;">Author's Data</p></b></h1>
<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <!--code to display the details of Author like its name, email id, address and mobile number-->
            <th>
            <th>
                <!--code to bold the text-->
                
                    <b>
                        @Html.DisplayNameFor(model => model.Name)
                    </b>
            </th>
            <th>
                <!--code to bold the text-->
                
                    <b>
                        Email Id
                    </b>
            </th>
            <th>
                <!--code to bold the text-->
                
                    <b>
                        @Html.DisplayNameFor(model => model.Address)
                    </b>
            </th>
            <th>
                <!--code to bold the text-->
                
                    <b>
                        Mobile Number</b>
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Email_Id)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Address)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Mobile_Number)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
