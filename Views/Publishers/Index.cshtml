@model IEnumerable<Book_MVC.Models.Publisher>

@{
    ViewData["Title"] = "Index";
}
<body>
    <div class="text-center">
        <!--code to keep the heading in the center-->
        <header>
            <!--z-index code to display image on the Publishers page behind the text-->
            <style>
                img {
                    position: absolute;
                    left: 0px;
                    top: 0px;
                    z-index: -1;
                    display: block;
                    width: 100%;
                    height: 100%;
                    object-fit: cover;
                }
            </style>
        </header>

        <img src="~/Images/book 3.jpg" />

        <!--code to increse the size of heading and to change its color also to bold it-->
        <h1 class="display-4"><b><p style="color:brown;"> PUBLISHERS' DATA</b></h1></p>

        <p>
            <a asp-action="Create">Create New</a>
        </p>
        <table class="table">
            <thead>
                <tr>
                    <th>
                        <!--code to display the details of Publisher like, publisher name,Mobile number and email id-->
                        <!--code to bold the text-->
                        <b>
                            Publisher Name<!--code to remove the underscore from Publisher name to make it look nice-->
                        </b>
                    </th>
                    <th>
                        <b>
                            <!--code to bold the text-->
                            Mobile Number<!--code to remove the underscore from Mobile number to make it look nice-->
                        </b>
</th>
                    <th>
                        <b>
                    <!--code to bold the text-->
                     Email Id<!--code to remove the underscore from Email.Id to make it look nice-->
</b>
                    </th>
                    <th></th>
                </tr>
            </thead>
</body>

            <body>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Publisher_Name)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Mobile_Number)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Email_Id)
                        </td>
                        <td>
                            <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                            <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                            <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                        </td>
                    </tr>
                }
            </body>
        </table>
