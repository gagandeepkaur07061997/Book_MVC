@model IEnumerable<Book_MVC.Models.Books>

@{
    ViewData["Title"] = "Index";
}
<body>
    <div class="text-center">
        <header>
            <!--z-index code to display image on the Books page behind the text-->
            <style>
                img {
                    position: absolute;
                    left: 0px;
                    top: 0px;
                    z-index: -1;
                    display: block;
                    width: 100%;
                    height: 100%;
                    object-fit: cover;
                }
            </style>
        </header>

        <img src="~/Images/book 3.jpg" />

        <!--code to increse the size of heading and to change its color, also to bold it-->
        <h1 class="display-4"><b><p style="color:saddlebrown;">BOOKS' DATA</b></h1></p>

        <p>
            <a asp-action="Create">Create New</a>
        </p>
        <table class="table">
            <thead>
                <tr>
                    <th>
                        <!--code to display the details of books like its tittle, discription, price, author-->
                        <!--code to bold the text-->

                        <b>
                            @Html.DisplayNameFor(model => model.Tittle)</b>
                    </th>
                    <th>
                        <!--code to bold the text-->

                        <b>
                            @Html.DisplayNameFor(model => model.Discription)</b>
                    </th>
                    <th>
                        <!--code to bold the text-->

                        <b>
                            @Html.DisplayNameFor(model => model.Price)</b>
                    </th>
                    <th>
                        <!--code to bold the text-->

                        <b>
                            @Html.DisplayNameFor(model => model.Author)</b>
                    </th>
                    <th></th>
                </tr>
            </thead>

            <body>
                @foreach (var item in Model)

                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Tittle)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Discription)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Price)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Author.Email_Id)
                        </td>
                        <td>
                            <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                            <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                            <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                        </td>
                    </tr>
                }
            </body>
</body>
        </table>
